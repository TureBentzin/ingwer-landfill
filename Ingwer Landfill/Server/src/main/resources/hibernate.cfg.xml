<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <property name = "hibernate.dialect">
            org.hibernate.dialect.PostgreSQLDialect
        </property>

        <property name = "hibernate.connection.driver_class">
            org.postgresql.Driver
        </property>

        <!-- Assume test is the database name -->

        <property name = "hibernate.connection.url">
            jdbc:postgresql:landfill
        </property>

        <property name = "hibernate.connection.username">
            app
        </property>

        <property name = "hibernate.connection.password">
            password
        </property>


        <property name= "hibernate.hbm2ddl.auto">update</property>
        <property name="show_sql">true</property>

        <!-- List of XML mapping files
        <mapping resource = "Employee.hbm.xml"/>
        -->

        <!-- Test -->
        <mapping class="de.bentzin.ingwer.landfill.db.test.Data"></mapping>

        <!-- User -->
        <mapping class="de.bentzin.ingwer.landfill.db.user.Account"></mapping>
        <mapping class="de.bentzin.ingwer.landfill.db.user.Username"></mapping>
        <mapping class="de.bentzin.ingwer.landfill.db.user.Displayname"></mapping>
        <mapping class="de.bentzin.ingwer.landfill.db.user.badge.BadgeType"></mapping>
        <mapping class="de.bentzin.ingwer.landfill.db.user.badge.BadgeOwnership"></mapping>
        <mapping class="de.bentzin.ingwer.landfill.db.user.Avatar"></mapping>

        <!-- Guild -->
        <mapping class="de.bentzin.ingwer.landfill.db.guild.Guild"></mapping>
        <mapping class="de.bentzin.ingwer.landfill.db.guild.GuildMembership"></mapping>
        <mapping class="de.bentzin.ingwer.landfill.db.guild.Boost"></mapping>

        <!-- Channel-->
        <mapping class="de.bentzin.ingwer.landfill.db.channel.Channel"></mapping>
        <mapping class="de.bentzin.ingwer.landfill.db.channel.DirectMessage"></mapping>
        <mapping class="de.bentzin.ingwer.landfill.db.channel.DirectMessageMember"></mapping>
        <mapping class="de.bentzin.ingwer.landfill.db.channel.GroupDirectMessage"></mapping>
        <mapping class="de.bentzin.ingwer.landfill.db.channel.GroupDirectMessageMember"></mapping>
        <mapping class="de.bentzin.ingwer.landfill.db.channel.GuildChannel"></mapping>

        <!-- Message -->
        <mapping class="de.bentzin.ingwer.landfill.db.message.Message"></mapping>

        <!-- References -->
        <mapping class="de.bentzin.ingwer.landfill.db.cdn.ExternalReference"></mapping>
        <mapping class="de.bentzin.ingwer.landfill.db.cdn.References"></mapping>

        <!-- Reactions / Usercontent -->
        <mapping class="de.bentzin.ingwer.landfill.db.reactions.Emoji"></mapping>
        <mapping class="de.bentzin.ingwer.landfill.db.reactions.GuildEmoji"></mapping>



    </session-factory>
</hibernate-configuration>